<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GloboTicketAdmin.Mobile.Views.EventDetailPage"
             xmlns:vm="clr-namespace:GloboTicketAdmin.Mobile.ViewModels"
             Title="EventDetailPage">
    
        <Grid>
        <ScrollView>
            <Grid>
                <VerticalStackLayout Padding="10">
                    <!-- Name -->
                    <Label
                        Text="{Binding Name, Mode=OneWay}"
                        Style="{StaticResource TitleLabelStyle}" />

                    <HorizontalStackLayout>
                        <CheckBox IsChecked="{Binding ShowLargerImage, Mode=OneWayToSource}" />
                        <Label Text="Show larger image" />
                    </HorizontalStackLayout>
                    
                    <Image 
                        IsVisible="{Binding ShowThumbnailImage, Mode=OneWay}"
                        WidthRequest="100" 
                        Source="{Binding ImageUrl}"/>
                    <Image
                        HorizontalOptions="Fill"
                        IsVisible="{Binding ShowLargerImage, Mode=OneWay}"
                        Source="{Binding ImageUrl}" />

                    <Grid RowDefinitions="Auto,*">
                        <Grid
                            ColumnDefinitions=".3*,.7*"
                            ColumnSpacing="5"
                            RowDefinitions="*,*,*,*,*,*"
                            RowSpacing="10">

                            <!-- Row 1 Artists -->
                            <Label
                                Grid.Row="0"
                                Grid.Column="0"
                                Text="Artist"/>
                            <Label
                                Grid.Row="0"
                                Grid.Column="1"
                                Style="{StaticResource ValueLabelStyle}"
                                Text="{Binding Artist}"/>

                            <!-- Row 2 Price -->
                            <Label
                                Grid.Row="1"
                                Grid.Column="0"
                                Text="Price"/>
                            <HorizontalStackLayout Grid.Row="1" Grid.Column="1">
                                <Label
                                 Grid.Row="1"
                                 Grid.Column="1"
                                 Style="{StaticResource ValueLabelStyle}" 
                                 Text="{Binding Price, StringFormat='{0:C}'}"/>
                                <Stepper
                                    Value="{Binding Price, Mode=TwoWay}"
                                    Increment="1"
                                    Minimum="0"
                                    Maximum="1000"
                                    />
                            </HorizontalStackLayout>
                           

                            <!-- Row 3 Status -->
                            <Label
                                Grid.Row="2"
                                Grid.Column="0"
                                Text="Status" />
                            <Label
                                Grid.Row="2"
                                Grid.Column="1"
                                Style="{StaticResource ValueLabelStyle}" 
                                Text="{Binding EventStatus}"/>

                            <!-- Row 4 Date -->
                            <Label
                                Grid.Row="3"
                                Grid.Column="0"
                                Text="Date" />
                            <Label
                                Grid.Row="3"
                                Grid.Column="1"
                                Style="{StaticResource ValueLabelStyle}" 
                                Text="{Binding Date}"/>

                            <!-- Row 5 Description -->
                            <Label
                                Grid.Row="4"
                                Grid.Column="0"
                                Text="Description"
                                VerticalOptions="Start"/>
                            <Label
                                Grid.Row="4"
                                Grid.Column="1"
                                Style="{StaticResource ValueLabelStyle}"
                                Text="{Binding Description, TargetNullValue='No description'}"/>

                            <!-- Row 6 Category -->
                            <Label
                                Grid.Row="5"
                                Grid.Column="0"
                                Text="Category" />
                            <Label
                                Grid.Row="5"
                                Grid.Column="1"
                                Style="{StaticResource ValueLabelStyle}"
                                Text="{Binding Category.Name, TargetNullValue='No category name', FallbackValue='No category provided'}"/>
                        </Grid>
                    </Grid>
                </VerticalStackLayout>
            </Grid>
        </ScrollView>
    </Grid>
</ContentPage>